<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_intro_background"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="16dp"
    android:paddingRight="12dp"
    android:paddingBottom="12dp"
    app:layout_anchorGravity="center">

    <ImageView
        android:id="@+id/intro_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_chats_list_new" />

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:text="@string/intro_public_group"
        android:textAppearance="@style/ChatText.Large"
        android:textColor="@color/white"
        android:layout_below="@id/intro_image"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_below="@id/intro_title"
        android:alpha="0.6"
        android:text="@string/intro_public_group_text"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        app:lineHeight="18dp" />

    <RelativeLayout
        android:id="@+id/intro_link_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/intro_text"
        android:layout_marginTop="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:alpha="0.4"/>

        <TextView
            android:id="@+id/intro_learn_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_public_group_learn"
            android:alpha="0.6"
            android:textColor="@color/cyan_700"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:textSize="14sp"/>

    </RelativeLayout>

</RelativeLayout>